{
	nvim_create_autocmd: autocmd,
	nvim_create_augroup: autogroup,
} = vim.api

export name = 'reedes/vim-textobj-quote'
export ft =
    * 'markdown'
    * 'text'
    * 'mail'
    * 'gitcommit'

export config = ->
  with group = autogroup 'textobj_quote', clear: true
    for pattern in *ft
      autocmd 'FileType',
        :pattern
        :group
        callback: -> vim.fn['textobj#quote#init']!
